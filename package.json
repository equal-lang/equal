{
  "name": "equal",
  "version": "0.0.1",
  "description": "Interpreter for the esoteric programming language Equal",
  "author": "Hechen Liu",
  "license": "MIT",
  "main": "./src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/equal-lang/equal.git"
  },
  "scripts": {
    "test": "mocha",
    "build": "webpack --config webpack.config.js",
    "start": "electron .",
    "build1": "tsc && node src/tools/generate.js",
    "start1": "node cli-build/equal/cli.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -w",
    "make": "npm run build1 && npm run build && npm run dist",
    "website": "webpack --config src/equal-paper/webpack.config.js",
    "local": "cd docs && http-server -c-0 && cd ..",
    "local-run": "nodemon --watch docs/ --exec 'npm run local'"
  },
  "build": {
    "appId": "com.electron.equal",
    "icon": "./public/assets/logo.ico",
    "win": {
      "target": "portable"
    },
    "files": [
      "build",
      "node_modules",
      "public",
      "src",
      "cli-build"
    ]
  },
  "postInstall": "electron-builder install-app-deps",
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.1",
    "@babel/preset-react": "^7.18.6",
    "@types/yargs": "^17.0.13",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "electron": "^21.1.0",
    "electron-builder": "^23.6.0",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.7.2",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.1",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.1.2",
    "@fontsource/source-code-pro": "^4.5.12",
    "@uiw/codemirror-theme-abcdef": "^4.12.4",
    "@uiw/react-codemirror": "^4.12.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-grid-layout": "^1.3.4",
    "yargs": "^17.6.0"
  }
}
